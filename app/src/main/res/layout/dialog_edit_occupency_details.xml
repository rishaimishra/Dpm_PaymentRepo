<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/added_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Occupancy Type"
                        android:textColor="@color/colorBlack" />


                    <Spinner
                        android:id="@+id/spinner_occupancy_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@color/editext_background_grey"
                        android:padding="@dimen/dimen16dp"
                        android:spinnerMode="dropdown"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Tenant Title"
                        android:textColor="@color/colorBlack" />


                    <Spinner
                        android:id="@+id/spinner_tenant_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@color/editext_background_grey"
                        android:padding="@dimen/dimen16dp"
                        android:spinnerMode="dropdown"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Tenant First Name"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Tenant First Name"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Middle Name"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_middle_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Middle Name"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Surname"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_sur_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Surname"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Mobile Number 1"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_mobile_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Mobile Number 1"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_weight=".4"
                        android:text="Mobile Number 2"
                        android:textColor="@color/colorBlack" />


                    <EditText
                        android:id="@+id/edt_landlord_mobile_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen16dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_weight=".6"
                        android:background="@drawable/rounded_corner_solid_grey"
                        android:hint="Mobile Number 2"
                        android:padding="@dimen/dimen16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/headerTextSize14sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_save_"
                style="@style/styleButtonWrapContent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen16dp"
                android:background="@drawable/rounded_corner_solid_blue"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>